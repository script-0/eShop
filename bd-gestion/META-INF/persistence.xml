<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">

    <persistence-unit name="projet_eShopPU">
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
        <class>bd.entity.Produit</class>
        <class>bd.entity.Lignefacture</class>
        <class>bd.entity.Categorie</class>
        <class>bd.entity.Fournisseur</class>
        <class>bd.entity.Gestionnaire</class>
        <class>bd.entity.Facture</class>
        <class>bd.entity.Client</class>
        <class>bd.entity.Gestionstock</class>
        <properties>
            <property name="eclipselink.jdbc.url" value="jdbc:mysql://localhost:3306/eShop?serverTimezone=UTC"/>
            <property name="eclipselink.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="eclipselink.jdbc.user" value="root"/>
            <property name="eclipselink.jdbc.password" value="password"/>
        </properties>
    </persistence-unit>
</persistence>
